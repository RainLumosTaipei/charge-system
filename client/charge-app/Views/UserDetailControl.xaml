<UserControl
    x:Class="charge_app.Views.UserDetailControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:charge_app.Core.Models"
    mc:Ignorable="d">

    <UserControl.Resources>
        <DataTemplate x:Key="OrderItemTemplate" x:DataType="models:Order">
            <Grid Padding="8 12"  Background="{ThemeResource ListViewItemBackground}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- 左侧图标区域 -->
                <StackPanel
                    Orientation="Vertical"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0,0,24,0">
                    <FontIcon Glyph="&#xE7BF;"
                              FontSize="32"
                              Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}" />
                    <TextBlock Text="{x:Bind TextType}"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Margin="0 8 0 0"
                               HorizontalAlignment="Center"
                               Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}" />
                </StackPanel>

                <!-- 中间内容区域 -->
                <StackPanel Grid.Column="1">
                    <TextBlock Text="{x:Bind TextId}" FontSize="16" FontWeight="SemiBold" />
                    <StackPanel Orientation="Horizontal" 
                                Margin="0,6,0,0">
                        <TextBlock Text="开始时间 :" Margin="0,0,4,0" />
                        <TextBlock
                            Text="{x:Bind TextStart}" />
                        <TextBlock Text="结束时间 :" Margin="32,0,4,0" />
                        <TextBlock Text="{x:Bind TextEnd}" />
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="2" HorizontalAlignment="Right" >
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="总金额:"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Margin="0,0,4,0"/>
                        <TextBlock Text="{x:Bind TextCost}"
                                   FontSize="16" FontWeight="Bold"
                                   Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}" />
                    </StackPanel>
                </StackPanel>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>

    <ScrollViewer
        Name="ForegroundElement"
        HorizontalAlignment="Stretch"
        VerticalScrollMode="Enabled"
        IsTabStop="True">
        <StackPanel HorizontalAlignment="Left" Margin="24 12 0 0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                <FontIcon
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="48"
                    Glyph="&#xE76E;" />
                <TextBlock
                    Margin="{StaticResource SmallLeftMargin}"
                    VerticalAlignment="Center"
                    Text="{x:Bind ListDetailsMenuItem.Name, Mode=OneWay}"
                    Style="{ThemeResource TitleTextBlockStyle}" />
            </StackPanel>

            <StackPanel Padding="0,15,0,0">
                <TextBlock Text="权限" Style="{StaticResource DetailSubTitleStyle}" />

                <TextBlock Text="{x:Bind ListDetailsMenuItem.TextType, Mode=OneWay}" Style="{StaticResource DetailBodyBaseMediumStyle}" />

                <TextBlock
                    Margin="{StaticResource SmallTopMargin}"
                    Text="用户标识符"
                    Style="{StaticResource DetailSubTitleStyle}" />
                <TextBlock Text="{x:Bind ListDetailsMenuItem.TextId, Mode=OneWay}" Style="{StaticResource DetailBodyBaseMediumStyle}" />


            </StackPanel>

            <ListView
                x:Name="OrderListView"
                ItemsSource="{x:Bind ListDetailsMenuItem.Orders, Mode=OneWay}"
                ItemTemplate="{StaticResource OrderItemTemplate}"
                SelectionMode="Single"
                MinWidth="800"
                Margin="-12,12, 0 ,0"/>

        </StackPanel>
    </ScrollViewer>
</UserControl>
